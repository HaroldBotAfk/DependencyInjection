<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemUserImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_dude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemUserNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemUserImageView"
        app:layout_constraintTop_toTopOf="@id/itemUserImageView"
        tools:text="Былинкин Данила Александрович" />

    <TextView
        android:id="@+id/itemUserDescTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/itemUserImageView"
        app:layout_constraintTop_toBottomOf="@id/itemUserNameTextView"
        tools:text="Делает что-то интересное" />
</androidx.constraintlayout.widget.ConstraintLayout>